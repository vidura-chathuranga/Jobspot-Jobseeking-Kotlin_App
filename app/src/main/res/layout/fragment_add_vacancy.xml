<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_2"
    tools:context=".AddVacancy">

    <ImageView
        android:id="@+id/back_arrow_vacancy"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="391dp"
        android:layout_height="751dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow_vacancy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingBottom="10dp"
                android:text="@string/job_pos"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/job_position_txt"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/up_txt_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/position_hint"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/type_work"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_of_workplace"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/up_txt_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/onsite"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/j_location"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/job_location"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/up_txt_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/job_location"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/company_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/select_company"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/comapny"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/up_txt_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/company"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/emp_type"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/employee_type"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/up_txt_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/emp_type_hint"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/company_desc"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="@dimen/up_txt_width"
                android:layout_height="@dimen/desc_height"
                android:background="@drawable/change_passoword_button"
                android:ems="10"
                android:hint="@string/company_desc"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/post_vacancy_btn"
                android:layout_width="@dimen/up_editbtn_width"
                android:layout_height="@dimen/up_editbtn_height"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/mainColor"
                android:fontFamily="@font/dm_sans"
                android:text="@string/post_a_vacancy"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>