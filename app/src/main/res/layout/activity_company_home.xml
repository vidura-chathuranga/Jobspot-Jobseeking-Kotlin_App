<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".companyHome">


        <ImageView
            android:id="@+id/imageView38"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bar_height"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/navigation_bar_background" />

        <ImageView
            android:id="@+id/home_img_btn"
            android:layout_width="@dimen/navbar_icon_width"
            android:layout_height="@dimen/navbar_icon_height"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vacancy_img_btn"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/active_home" />

        <ImageView
            android:id="@+id/vacancy_img_btn"
            android:layout_width="@dimen/navbar_icon_width"
            android:layout_height="@dimen/navbar_icon_height"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cmpny_user_profile_btn"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toEndOf="@+id/home_img_btn"
            app:layout_constraintTop_toTopOf="@+id/imageView38"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/deactive_add_vacancy" />

        <ImageView
            android:id="@+id/cmpny_user_profile_btn"
            android:layout_width="@dimen/navbar_icon_width"
            android:layout_height="@dimen/navbar_icon_height"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vacancy_img_btn"
            app:srcCompat="@drawable/deactivate_user" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/company_frag"
            android:name="vidura.chathuranga.jobspot.CompanyHomeFrag"
            android:layout_width="412dp"
            android:layout_height="660dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_company_home" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>